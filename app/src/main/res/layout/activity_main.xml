<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_one"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rel_one">

        <ImageButton
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            ads:srcCompat="@android:drawable/ic_input_delete"
            android:id="@+id/btnUndo"
            android:tint="@color/colorAccent"
            android:visibility="visible"
            android:background="@null"
            android:cropToPadding="false"
            android:scaleType="centerCrop" />

        <ImageButton
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            ads:srcCompat="@android:drawable/ic_menu_delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnDelete"
            android:background="@null"
            android:tint="@color/colorAccent"
            android:visibility="visible"
            android:scaleType="centerCrop" />

    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:id="@+id/rl"
        tools:context="xyz.yapapa.fromdottodot.MainActivity"
        android:layout_below="@+id/rel_one"
        android:layout_above="@+id/rel_two"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/rel_two"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            ads:srcCompat="@android:drawable/ic_media_previous"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btnPrevPic"
            android:background="@null"
            android:tint="@color/colorAccent"
            android:visibility="visible"
            android:scaleType="centerCrop" />

        <ImageButton
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            ads:srcCompat="@android:drawable/ic_media_next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btnNextPic"
            android:background="@null"
            android:tint="@color/colorAccent"
            android:visibility="visible"
            android:scaleType="centerCrop" />

        <ImageButton
            android:layout_width="@dimen/button"
            android:layout_height="@dimen/button"
            ads:srcCompat="@android:drawable/ic_menu_manage"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnColor"
            android:background="@null"
            android:tint="@color/colorAccent"
            android:visibility="visible"
            android:scaleType="centerCrop"
            android:elevation="6dp" />

    </RelativeLayout>


    
</RelativeLayout>
